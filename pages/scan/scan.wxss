.radar {
  width: 60vw;
  height: 60vw;
  margin: 20px auto;
  position: relative;
}

.ring {
  border-radius: 50%;
  border: 1px solid #F6A289;
  box-shadow: 0px 0px 1px #F6A289, inset 0px 0px 2px #F6A289;
  position: absolute;
}

.ring-1 {
  width: 100%;
  height: 100%;
}

.ring-2 {
  width: 90%;
  height: 90%;
  top: 5%;
  left: 5%;
  opacity: 0.35;
}

