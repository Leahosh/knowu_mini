}

@keyframes rotate{
  0% {
    transform: rotate(0deg);
    transform-origin: 50% 50%;
  }
  100% {
    transform:rotate(360deg);
  }
}

.x {
  width: 100%;
  background-color: red;
  height: 0.3%;
  position: absolute;
  top: 50%;
  box-shadow: 0px 0px 10px #F6A289;
  opacity: 1.0;
  z-index: 100;
  animation: 6s rotate infinite linear; 
}

@keyframes blink {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

.target {
  position: absolute;
  width: 5px;
  height: 5px;
  background-color: red;
  border-radius: 5px;
  opacity: 0;
  box-shadow: 0px 0px 20px 2px #F6A289;
}

.target-1 {
  top: 15vw;
  left: 20vw;
  animation: 3s blink infinite 1s;
}

.target-2 {
  top: 6vw;
  left: 30vw;
  animation: 3s blink infinite 2s;
}

.target-3 {
  top: 43vw;
  left: 32vw;
  animation: 3s blink infinite 1.4s;
}

