/*动画 start */
@keyframes anm_word
{
  from {
    color: transparent;
    font-size: 10px;
  }
  to {
    color: #F6A289;
    font-size: 35px;
  }
}
@keyframes anm_logo
{
  from {
    position: relative;
    opacity: 0.5;
    width:80px;
    height:80px;
    left:-5px;
    top:-4px;
  }
  20% {
    position: relative;
    opacity: 0.7;
    width:50px;
    height:50px;
    left:15px;
    top:14px;
  }
  to {
    position: relative;
    opacity: 1;
    left:0;
    top:0;
  }
}
@keyframes anm_desc{
  from{
    opacity: 10%;
  }
  to{
    opacity: 100%;
  }
}
/*动画 end  */

.logo {
  width:120px;
  height:120px;
  animation: anm_logo 1s;
}

.welcome {
  text-align: center;
  color: #F6A289;
  margin-top: 10px;
  font-size: 35px;
  animation: anm_word 2s;
  font-family:  'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

.desc{
  color: grey;
  animation: anm_desc 2s;
  font-size: 10px;
  position: fixed;
  bottom: 10%;
  text-align: center;
}